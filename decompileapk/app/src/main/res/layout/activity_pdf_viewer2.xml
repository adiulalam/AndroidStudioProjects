<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <Toolbar android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="52dp" android:minHeight="?attr/actionBarSize">
        <Button android:textColor="#ffffff" android:layout_gravity="end" android:id="@+id/share2" android:background="@drawable/share" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="15dp" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:textColor="#ffffff" android:gravity="end" android:layout_gravity="end" android:id="@+id/share" android:paddingTop="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="0dp" android:text="Share" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:textColor="#ffffff" android:layout_gravity="start" android:id="@+id/download2" android:background="@drawable/download" android:padding="20dp" android:layout_width="30dp" android:layout_height="30dp" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:textColor="#ffffff" android:gravity="start" android:layout_gravity="start" android:id="@+id/download" android:paddingTop="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="Download" style="@style/Widget.AppCompat.Button.Borderless"/>
    </Toolbar>
    <TextView android:textSize="20dp" android:textColor="#ff5722" android:gravity="center" android:id="@+id/textView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Now, you can download or share your marriage biodata" android:layout_below="@+id/toolbar"/>
    <com.github.barteksc.pdfviewer.PDFView android:id="@+id/pdfView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/textView1"/>
</RelativeLayout>
