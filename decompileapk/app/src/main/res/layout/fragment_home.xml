    <Button android:textColor="#ffffff" android:layout_gravity="center" android:id="@+id/other_application" android:background="#009688" android:layout_width="250dp" android:layout_height="50dp" android:layout_marginTop="40dp" android:layout_marginBottom="5dp" android:text="Other Application"/>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/gradient_blue_rect" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="11.7dp" android:layout_marginTop="50dp" android:layout_marginRight="11.7dp" android:layout_marginBottom="15dp">
        <ImageView android:layout_gravity="center" android:layout_width="49.7dp" android:layout_height="56dp" android:layout_marginLeft="22dp" android:src="@drawable/ic_shield"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginTop="15sp" android:layout_marginRight="15sp" android:layout_marginBottom="15dp">
