            <androidx.cardview.widget.CardView android:id="@+id/reception_ceremony" android:layout_width="match_parent" android:layout_height="130dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" app:cardCornerRadius="6dp">
